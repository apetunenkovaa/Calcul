<Window x:Class="Calcul.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calcul"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock FontSize="18" HorizontalAlignment="Center">Калькулятор</TextBlock>
            <GroupBox FontSize="14" Header="Выберите арифметическую операцию">
                <ComboBox Name="cmbOperation"></ComboBox>
  
            </GroupBox>
            <Grid>
                <TextBox Width="55" Height="30" Name="firstOperand" HorizontalAlignment="Left" Margin="300,5,5,15"></TextBox>
                <TextBlock FontSize="14" HorizontalAlignment="Center" Margin="0,5,5,10">+</TextBlock>
                <TextBox Width="55" Height="30" Name="secondOperand" HorizontalAlignment="Right" Margin="5,5,300,15"></TextBox>
            </Grid>
            <Button FontSize="14" Name="Calculate">Вычислить</Button>
            <GroupBox FontSize="14" Header="Результат:">
                <TextBox Name="tbResult"></TextBox>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>
